<%#title:网上调查统计%>
<div class="tl_content_part">
  <div class="tl_content_part_b">
    <div class="content_part_a">
      <div class="content_part_a_link">
        <a href="/www" target="_blank">网站首页</a>&nbsp;>&nbsp;<a ><%= @page.title %></a>
      </div>
    </div>
    <div class="content_part_c">
      <div class="content_part_c_title"><%= Xmt::Faq::Poll.last.title %></div>
      <div class="content_part_c_date">
      </div>
    </div>

    <%= form_tag("/polls/#{Xmt::Faq::Poll.last.id}",method:"put") do %>
        <%= hidden_field_tag 'site_id', @site.id %>
        <% Xmt::Faq::Poll.last.questions.each  do |q| %>
        <div class="dczj_2_part_d">
          <div class="dczj_part_d_title"><%= q.title %></div>
          <% allqty = 0 %>
          <% q.answers.each  do |item| %>
              <% allqty = allqty.to_i + item[:qty].to_i %>
          <% end %>

          <div class="dczj_2_content">
            <% q.answers.each_with_index  do |item,i| %>
                <div class="skillbar clearfix " data-percent="<%= number_to_percentage((item.qty.to_i/allqty.to_f) * 100, precision: 0)%>">
                  <div class="skillbar-title"  id="dczj<%= i + 1%>"><span><%= item.title %></span></div>
                  <div class="skillbar-bar"  id="dczj-option<%= i + 1%>"></div>
                  <div class="skill-bar-percent"><%= number_to_percentage((item.qty.to_i/allqty.to_f) * 100, precision: 0)%></div>
                </div>
            <% end %>
          </div>
        </div>
        <%end%>
    <% end %>

