<div class="page-header">
  <h1>查看菜单<small></small></h1>
</div>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <table id="user" class="table table-bordered table-striped" style="clear: both">
      <tbody>
      <tr>
        <td class="column-left">菜单名称：</td>
        <td class="column-right">
          <%= @menu.name %>
        </td>
      </tr>
      <tr>
        <td class="column-left">菜单标识：</td>
        <td class="column-right">
          <%= @menu.sign %>
        </td>
      </tr>
      <tr>
        <td>菜单路径：</td>
        <td>
          <%= @menu.path %>
        </td>
      </tr>
      <tr>
        <td>菜单图标：</td>
        <td>
          <%= @menu.icon %>
          <i class="<%= @menu.icon %>"></i>
        </td>
      </tr>
      </tbody>
    </table>

  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">

      <a class="btn btn-teal" href="<%= edit_xmt_nav_menu_path(@menu) %>">
        <i class="fa fa-edit"></i>
      </a>
      <a class="btn btn-primary" href="<%= xmt_nav_menus_path %>">
        <i class="fa fa-reply"></i>
      </a>
    </div>
  </div>

</div>

