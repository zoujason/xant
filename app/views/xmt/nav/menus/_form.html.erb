<%= form_for(@menu) do |f| %>
  <% if menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@menu.errors.count, "error") %> prohibited this mgr_menu from being saved:</h2>
      <ul>
      <% @menu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="col-sm-12">
      <!-- start: TEXT FIELDS PANEL -->
      <div class="panel-body">
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-1">
            菜单名称：<span class="symbol required"></span>
          </label>
          <div class="col-sm-9">
            <%= f.text_field(:name, class: "form-control",placeholder:"菜单名称",required:"required") %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-4">
            菜单标记：<span class="symbol required"></span>
          </label>
          <div class="col-sm-9">
            <%= f.text_field(:sign, class: "form-control",placeholder:"输入菜单标记",required:"required") %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-3">
            菜单路径：
          </label>
          <div class="col-sm-9">
            <%= f.text_field(:path, class: "form-control",placeholder:"输入菜单路径") %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-4">
            菜单图标：
          </label>
          <div class="col-sm-9">
            <%= f.text_field(:icon, class: "form-control",placeholder:"输入菜单图标") %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-4"></div>
          <div class="col-sm-2"><input type="submit" name="commit" value="确认提交" class="btn btn-blue next-step btn-block" data-disable-with="确认提交"></div>
          <div class="col-sm-1">  <a class="btn btn-primary" href="<%= xmt_nav_menus_path%>">
            <i class="fa fa-reply"></i> </a></div>

        </div>
      </div>
    </div>
<% end %>
