<div class="page-header">
  <h1>查看频道<small></small></h1>
</div>
<p id="notice"><%= notice %></p>
<div class="panel panel-body panel-default">
  <div class="form-group marbot0">
    <label class="col-xs-4 col-sm-3 control-label"><span class="text-danger"></span><strong>频道名称：</strong></label>
    <div class="col-sm-9 col-xs-8">
      <p class="form-control-static"><%= @channel.title %></p>
    </div>
  </div>
  <div class="form-group marbot0">
    <label class="col-xs-12 col-sm-3 col-md-2 control-label"><span class="text-danger"></span><strong>频道模版：</strong></label>
    <div class="col-sm-9 col-xs-12">
      <p class="form-control-static"><%= @channel.tpl %></p>
    </div>
  </div>
</div>

<div class="col-lg-12 space20">
  <%= link_to  edit_xmt_press_channel_path(@channel), class: "btn btn-teal" do %>
      <i class="fa fa-edit"></i>
  <% end %>
  <%= link_to  xmt_press_channels_path, class: "btn btn-primary" do %>
      <i class="fa fa-reply"></i>
  <% end %>
</div>





