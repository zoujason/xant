<div class="panel-body">
  <%= form_for(@advertisement, html: {multipart: true, class: "form-horizontal", onkeydown:"if(event.keyCode==13){return false;}"  }) do |f| %>
      <%= render 'shares/errors', obj: @advertisement if @advertisement.errors.any? %>
      <input type="hidden" name="site_id" value="<%= @site.id %>">
      <div class="row">
        <div class="col-sm-12">
          <div class="tabbable">
            <ul id="myTab" class="nav nav-tabs tab-bricky">
              <li class="active">
                <a href="#panel_tab2_example1" data-toggle="tab">
                  <i class="clip-home-2"></i>基本信息
                </a>
              </li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane in active" id="panel_tab2_example1">
                <div class="form-group">
                  <%= f.label(:title, "标题：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:title, class: "form-control",required:"required") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:position,"广告位置：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.select(:position, ChannelMap.new(@site).nested_set_options(),{}, class: "form-control") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:isdelete, "是否显示：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <div class="checkbox">
                      <label>
                        <%= f.check_box(:isdelete, { class: 'grey'}, "true", "false")%>
                      </label>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:avatar,"缩略图：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= image_tag( @advertisement.avatar.url(:thumb), width: 50, height: 50) unless @advertisement.avatar.blank? %>
                    <%= f.file_field(:avatar, class: "file") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:link, "外部链接：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:link, class: "form-control") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:code, "html代码：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_area(:code, class: "form-control")%>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:seq, "排序：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.number_field(:seq) %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4"></div>
          <div class="col-sm-2"><input type="submit" name="commit" value="确认提交" class="btn btn-blue next-step btn-block" data-disable-with="确认提交"></div>
          <div class="col-sm-1">  <a class="btn btn-primary" href="<%= xmt_ad_advertisements_path(site_id: @site.id)%>">
            <i class="fa fa-reply"></i> </a></div>
        </div>
      </div>
  <% end %>
</div>
<!-- start: PAGE CONTENT -->





