<div class="page-header">
  <h1>查看会员模板<small></small></h1>
</div>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <table id="user" class="table table-bordered table-striped" style="clear: both">
      <tbody>
      <tr>
        <td class="column-left"><strong>模板名称：</strong></td>
        <td class="column-right">
          <%= @profile.title %>
        </td>
      </tr>
      <tr>
        <td class="column-left"><strong>所属站点：</strong></td>
        <td class="column-right">
          <%= @sites.find(@profile.parent_id).name%>
        </td>
      </tr>
      <tr>
        <td class="column-left"><strong>模板：</strong></td>
        <td class="column-right">
          <%= @profile.tpl %>
        </td>
      </tr>
      </tbody>
    </table>

  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">

      <a class="btn btn-teal" href="<%= edit_xmt_mgr_profile_path(@profile)%>">
        <i class="fa fa-edit"></i>
      </a>
      <a class="btn btn-primary" href="<%= xmt_mgr_profiles_path%>">
        <i class="fa fa-reply"></i>
      </a>
    </div>
  </div>

</div>
