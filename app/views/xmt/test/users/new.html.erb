<%= render 'xmt/test/public/header'  %>
<div class="container" style="margin-top: 50px;">
  <h1 class="text-center">注 册</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:user,url: xmt_test_users_path) do |f| %>
          <%= render 'shares/errors',obj: @user if @user.errors.any? %>
          <%= f.label :username,"账号" %>
          <%= f.text_field :username, class: 'form-control' %>
          <%= f.label :password,"密码" %>
          <%= f.password_field :password, class: 'form-control' %>
          <%= f.label :password_confirmation, "确认密码" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
          <%= f.submit "注册", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

</div>
