<%= render 'xmt/test/public/header'  %>
<div class="container" style="margin-top: 50px;">
  <h1 class="text-center">登 录</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: xmt_test_login_path) do |f| %>
          <%= f.label :username %>
          <%= f.text_field :username, class: 'form-control' %>
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
          <%= f.submit "登录", class: "btn btn-primary" %>
      <% end %>
      <p>没账号? <%= link_to "在这里注册!", new_xmt_test_user_path %></p>
    </div>
  </div>

</div>
