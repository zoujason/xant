<div class="page-header">
  <h1>试卷管理<small></small></h1>
</div>
<% unless notice.blank? %>
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong><%= raw notice %></strong>
    </div>
<% end %>
<div class="row">
  <div class="col-sm-12">
    <div class="tabbable">

      <div class="tab-content">
        <div id="panel_tab_example1" class="tab-pane active">
          <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 pull-left">
                <%= link_to xmt_test_exams_path ,  "class":"btn btn-blue add-row" do %>
                  <i class="fa fa-reply"></i> 返回
                <% end %>
            </div>

            <div id="sample_1_filter" class="col-lg-6 col-md-6 col-sm-6 col-xs-12 pull-right dataTables_filter search-position">
              <label>
                <form action="<%= xmt_test_exams_path %>" method="get" >
                  <div class="col-lg-4 " style="float:right;">
                    <div class="input-group" >
                      <input type="search" name="key" class="form-control" placeholder="请输入试卷名称搜索" aria-controls="sample_1">
                      <span class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                      </span>
                    </div>
                  </div>
                </form>
              </label>
            </div>
          </div>
          <table class="table table-striped table-bordered table-hover table-full-width" id="sample-table-1">
            <caption>当前频道：<%= @channel.nil? ? "全部内容" : @channel.try(:title) %></caption>
            <thead>
            <tr>
              <th class="center" style="width:20%;">考试标题</th>
              <th class="text-center" style="width:10%;">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @papers.each do |paper|  %>
                <tr>
                  <td class="center"><%= paper.title %></td>
                  <td class="center">
                    <div class="visible-md visible-lg hidden-sm hidden-xs">
                      <%= link_to xmt_test_paper_path(paper), 'class': 'btn btn-xs btn-green tooltips', 'data-placement': 'top',  'data-original-title': '查看' do %>
                          <i class="fa fa-eye"></i>
                      <% end    %>
                    </div>
                    <div class="visible-xs visible-sm hidden-md hidden-lg">
                      <div class="btn-group">
                        <a class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                          <i class="clip-cog"></i> <span class="caret"></span>
                        </a>
                        <ul role="menu" class="dropdown-menu pull-right">

                          <li role="presentation">
                            <%= link_to xmt_test_paper_path(paper), 'tabindex': '-1', 'role': 'menuitem' do %>
                                <i class="fa fa-eye"></i> 查看
                            <% end %>
                          </li>
                        </ul>
                      </div>
                    </div></td>
                </tr>
            <% end %>
            </tbody>
            <footer>
              <tr><td colspan="7"><%#= paginate @exam, views_prefix: :xmt %></td></tr>
            </footer>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">

    </div>
  </div>
</div>


</div>
