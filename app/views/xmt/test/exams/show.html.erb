<div class="page-header">
  <h1>查看考试信息<small></small></h1>
</div>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <table id="user" class="table table-bordered table-striped" style="clear: both">
      <tbody>

      <tr>
        <td class="column-left">标题：</td>
        <td class="column-right">
          <%= @exam.title %>
        </td>
      </tr>
      <tr>
        <td class="column-left">所属分类：</td>
        <td class="column-right">
          <%= @exam.category.try(:title) %>
        </td>
      </tr>
      <tr>
        <td class="column-left">模式：</td>
        <td class="column-right">
          <%= get_mode(@exam) %>
        </td>
      </tr>
          <tr>
            <td class="column-left">随机规则：</td>
            <td class="column-right">
        <% @exam.type_rules.each do |rule| %>
               <p><span>题型:<%= Xmt::Core::Dict.dict(rule.question_type,'question_typ').title %></span>  <span>数量:<%= rule.question_size %> </span>  <span>分数:<%= rule.score %></span></p>

        <% end %>
            </td>
          </tr>
      <tr>
        <td class="column-left">开始时间：</td>
        <td class="column-right">
          <%= @exam.try(:start_at) && @exam.try(:start_at).strftime('%Y-%m-%d %H:%M:%S').to_s %>
        </td>
      </tr>
      <tr>
        <td class="column-left">结束时间：</td>
        <td class="column-right">
          <%= @exam.try(:end_at) && @exam.try(:end_at).strftime('%Y-%m-%d %H:%M:%S').to_s %>
        </td>
      </tr>


      </tbody>
    </table>

  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">

      <a class="btn btn-teal" href="<%= edit_xmt_test_exam_path(@exam)%>">
        <i class="fa fa-edit"></i>
      </a>
      <a class="btn btn-primary" href="<%= xmt_test_exams_path %>">
        <i class="fa fa-reply"></i>
      </a>
    </div>
  </div>

</div>
