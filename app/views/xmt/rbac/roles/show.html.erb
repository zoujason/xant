<div class="page-header">
  <h1>查看角色<small></small></h1>
</div>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <table id="user" class="table table-bordered table-striped" style="clear: both">
      <tbody>
      <tr>
        <td class="column-left">角色名称：</td>
        <td class="column-right">
          <%= @role.name %>
        </td>
      </tr>
      <tr>
        <td class="column-left">所属用户组：</td>
        <td class="column-right">
          <%= @role.groups.map(&:name).join('|')%>
        </td>
      </tr>
      </tbody>
    </table>

  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">

      <a class="btn btn-teal" href="<%= edit_xmt_rbac_role_path(@role)%>">
        <i class="fa fa-edit"></i>
      </a>
      <a class="btn btn-primary" href="<%= xmt_rbac_roles_path%>">
        <i class="fa fa-reply"></i>
      </a>
    </div>
  </div>

</div>
