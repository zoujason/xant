<%= form_for(@role) do |f| %>
  <% if @role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</h2>

      <ul>
      <% @role.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="col-sm-12">
      <!-- start: TEXT FIELDS PANEL -->
      <div class="panel-body">
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-4">
            角色名称：<span class="symbol required"></span>
          </label>
          <div class="col-sm-9">
            <%= f.text_field(:name, class: "form-control",placeholder:"name",required:"required") %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-2">
            所属用户组<span class="symbol required"></span>
          </label>
          <div class="col-sm-9">
            <%= f.select :group_ids,Xmt::Rbac::Group.all.collect { |p| [ p.name, p.id ] },{},{ :class => 'form-control', :multiple => 'multiple'}%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4"></div>
          <div class="col-sm-2"><input type="submit" name="commit" value="确认提交" class="btn btn-blue next-step btn-block" data-disable-with="确认提交"></div>
          <div class="col-sm-1"><a class="btn btn-primary" href="<%= xmt_rbac_roles_url%>">
            <i class="fa fa-reply"></i> </a></div>
        </div>
      </div>
    </div>

<% end %>
