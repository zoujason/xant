            <%= f.text_field(:name, class: "form-control",placeholder:"name",required:"required") %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-4"></div>
          <div class="col-sm-2"><input type="submit" name="commit" value="确认提交" class="btn btn-blue next-step btn-block" data-disable-with="确认提交"></div>
          <div class="col-sm-1">  <a class="btn btn-primary" href="<%= xmt_rbac_groups_path%>">
            <i class="fa fa-reply"></i> </a></div>
        </div>
      </div>
    </div>

<% end %>