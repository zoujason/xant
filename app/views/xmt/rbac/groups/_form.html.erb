<%= form_for(@group) do |f| %>
    <% if @group.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@group.errors.count, "error") %> prohibited this role from being saved:</h2>

          <ul>
            <% @group.errors.full_messages.each do |message| %>
