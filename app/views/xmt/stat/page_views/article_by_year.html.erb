<div class="page-header">
  <h1>文章年访问统计
    <small></small>
  </h1>
</div>
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-12">
    <div class="panel-body">
     <ul id="myTab" class="nav nav-tabs tab-bricky xmt-tab">
        <% @sites.each do |site| %>
            <% if subject.allow(site.id,'visite')%>
               <li class="<%= site.id == @site.id ? 'active' : 'dropdown' %>">
                 <%= link_to site.name, article_by_year_xmt_stat_page_views_path(site_id:site.id),class:'dropdown-toggle'%>
               </li>
            <% end %>
        <% end %>
      </ul>
      <div class="row">
        <div id="sample_1_filter" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pull-right dataTables_filter search-position">
          <label>
            <%= form_tag('/xmt/stat/page_views/article_by_year', {method: "get", id: "searchform"}) do%>
                <input type="hidden" name="site_id" value="<%= @site.id %>">
                <%= select_tag  :article_id, options_from_collection_for_select(Xmt::Press::Channel.where(parent_ids:BSON::ObjectId(@article_site_id)),'id','title'), include_blank:'频道选择',class:'select-item one_row',required:'required' %>
                <select name="year" class="select-item one_row" required>
                  <option value="">请选择年份</option>
                  <option value="2017">2017</option>
                  <option value="2018">2018</option>
                  <option value="2019">2019</option>
                  <option value="2020">2020</option>
                  <option value="2021">2021</option>
                  <option value="2022">2022</option>
                  <option value="2023">2023</option>
                  <option value="2024">2024</option>
                  <option value="2025">2025</option>
                </select>
                <input id="search" class="btn btn-blue one_row" type="submit" name="keywords" value='按照年统计' />
            <% end %>
          </label>
        </div>

      </div>
      <table class="table table-striped table-bordered table-hover table-full-width" id="sample-table-1">
        <thead>
        <tr>
          <th class="center">文章标题</th>
          <th class="center">年份</th>
          <% 12.times do |index| %>
              <th class="center"><%= index + 1 %>月</th>
          <% end %>
          <th class="center">总计</th>
          <!--<th style="text-align: center">操作</th>-->
        </tr>
        </thead>
        <tbody>
          <% @article_year.each do |per| %>
            <tr>
              <% allqty = 0 %>
              <td class="center"><%= per[0] %></td>
              <td class="center"><%= @year %></td>
              <% per[1].each do |qty| %>
                  <td class="center"><%= qty.to_i %></td>
                  <% allqty += qty.to_i %>
              <% end %>
              <td class="center"><%= allqty %></td>
              <!--<td class="center">-->
                <!--<div class="visible-md visible-lg hidden-sm hidden-xs">-->
                  <!--<a class="btn btn-xs btn-bricky tooltips" data-placement="top" data-original-title="删除" data-confirm="确定删除?" rel="nofollow" data-method="delete" href="/xmt/stat/page_views/destroy?title=<%= per[1] %>&path=/xmt/stat/page_views/article_by_year">-->
                    <!--<i class="fa fa-times"></i>-->
                  <!--</a>-->
                <!--</div>-->
              <!--</td>-->
            </tr>
          <% end %>
        </tbody>
        <footer>
          <tr><td colspan="16"><%= paginate @article_year, views_prefix: :xmt %></td></tr>
        </footer>
      </table>
    </div>
  </div>
</div>


