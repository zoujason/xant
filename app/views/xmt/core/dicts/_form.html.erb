<%= form_for(@dict) do |f| %>
    <% if dict.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@dict.errors.count, "error") %> prohibited this mgr_dict_type from being saved:</h2>

          <ul>
            <% @dict.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="col-sm-12">
      <!-- start: TEXT FIELDS PANEL -->
      <div class="panel-body">
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-4">
            dict_type：<span class="symbol required"></span>
          </label>
          <div class="col-sm-9">
            <%= f.collection_select :typ, Xmt::Core::Dict.types, :sign, :title,{},{ :class => 'form-control'}  %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-4">
            Title：<span class="symbol required"></span>
          </label>
          <div class="col-sm-9">
            <%= f.text_field(:title, class: "form-control",placeholder:"Title",required:"required") %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-4">
            sign：<span class="symbol required"></span>
          </label>
          <div class="col-sm-9">
            <%= f.text_field(:sign, class: "form-control",placeholder:"Sign",required:"required") %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-4"></div>
          <div class="col-sm-2"><input type="submit" name="commit" value="确认提交" class="btn btn-blue next-step btn-block" data-disable-with="确认提交"></div>
          <div class="col-sm-1">  <a class="btn btn-primary" href="<%= xmt_core_dicts_url%>">
            <i class="fa fa-reply"></i> </a></div>
        </div>
      </div>
    </div>

<% end %>

