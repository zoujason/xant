
<div class="panel-body">
  <%= form_for(@dept, html: {class: "form-horizontal", onkeydown:"if(event.keyCode==13){return false;}"  }) do |f| %>
      <%= render 'shares/errors', obj: @dept if @dept.errors.any? %>
  <div class="row">
    <div class="col-sm-12">
      <div class="tabbable">
        <div class="tab-content">
          <div class="tab-pane in active" id="panel_tab2_example1">
           <div class="form-group">
             <%= f.hidden_field :id %>
              <%= f.label(:title,"部门名称：", class: "col-sm-2 control-label")%>
              <div class="col-sm-9">
                <%= f.text_field(:title, class: "form-control",required:"required") %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label(:sign,"部门类型：",class: "col-sm-2 control-label")%>
              <div class="col-sm-9">
                <%= f.collection_select :sign, Xmt::Core::Dict.dicts(:dept_type), :sign, :title, {}, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label(:seq,"部门排序：",class: "col-sm-2 control-label")%>
              <div class="col-sm-9">
                <%= f.number_field(:seq) %>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-4" id="add-input"></div>
      <div class="col-sm-2" id="vive-submit">
        <input type="submit" name="commit" value="确认提交" class="btn btn-blue next-step btn-block" data-disable-with="确认提交">
      </div>
     <div class="col-sm-1">
        <a title="返回" class="btn btn-primary" href="<%= xmt_staff_depts_path%>">
          <i class="fa fa-reply"></i> </a>
      </div>
    </div>
  </div>
  <% end %>
</div>



