<div class="page-header">
  <h1>会员管理<small></small></h1>
</div>
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-12">
    <div class="tabbable">
      <ul id="myTab" class="nav nav-tabs tab-bricky">
        <% @sites.each do |site| %>
            <li class="<%= site.id == @site.id ? 'active' : '' %>">
              <%= link_to site.name, xmt_staff_members_path(site_id: site.id) %>
            </li>
        <% end %>
      </ul>
      <table class="table table-striped table-bordered table-hover" id="sample-table-2">
        <thead>
        <tr>
          <th>会员登录账号</th>
          <th>会员角色</th>
          <th>会员所属用户组</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% @members.each do |member| %>
            <tr>
              <td><%= member.username %></td>
              <td><%= member.roles.map(&:name).join('|') %></td>
              <td><%= member.groups.map(&:name).join('|') %></td>
              <td class="center">
                <div class="visible-md visible-lg hidden-sm hidden-xs">
                  <%= link_to xmt_staff_member_path(member), 'class': 'btn btn-xs btn-green tooltips', 'data-placement': 'top',  'data-original-title': '查看' do %>
                      <i class="fa fa-eye"></i>
                  <% end  %>
                  <%= link_to edit_xmt_staff_member_path(member), 'class': 'btn btn-xs btn-teal tooltips', 'data-placement': 'top',  'data-original-title': '修改' do %>
                      <i class="fa fa-edit"></i>
                  <% end   %>
                  <%= link_to xmt_staff_member_path(member), 'class': 'btn btn-xs btn-bricky tooltips', 'data-placement': 'top',  'data-original-title': '删除' , method: :delete, data: { confirm: '确定删除?' } do %>
                      <i class="fa fa-times"></i>
                  <% end   %>
                </div>
                <div class="visible-xs visible-sm hidden-md hidden-lg">
                  <div class="btn-group">
                    <a class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                      <i class="clip-cog"></i> <span class="caret"></span>
                    </a>
                    <ul role="menu" class="dropdown-menu pull-right">
                      <li role="presentation">
                        <a role="menuitem" tabindex="-1" href="<%=xmt_staff_member_path(member)%>">
                          <i class="fa fa-eye"></i> Show
                        </a>
                      </li>
                      <li role="presentation">
                        <a role="menuitem" tabindex="-1" href="<%=edit_xmt_staff_member_path(member)%>">
                          <i class="fa fa-edit"></i> Edit
                        </a>
                      </li>
                      <li role="presentation">
                        <a role="menuitem" tabindex="-1" href="<%=xmt_staff_member_path(member)%>" data-confirm="Are you sure?" rel="nofollow" data-method="delete">
                          <i class="fa fa-times"></i> Destroy
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">
      <%= link_to new_xmt_staff_member_path(site_id: @site.id) ,  "class":"btn btn-orange add-row" do %>
          <i class="fa fa-plus"></i>
      <% end   %>
    </div>
  </div>
</div>
