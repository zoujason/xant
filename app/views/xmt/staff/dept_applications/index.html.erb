<div class="page-header">
  <h1>部门管理<small></small></h1>
</div>
<p id="notice"><%= notice %></p>
<ul id="myTab" class="nav nav-tabs tab-bricky xmt-tab">
  <% @depts.each do |dept| %>
          <li class="<%= dept.id.to_s == params[:dept_id] ? 'active' : 'dropdown' %>" <% if  dept.id.to_s == params[:dept_id]%> style="background-color: #b33426" <% end %>>
            <a href="<%= xmt_staff_dept_applications_path(dept_id:dept.id)%>" class="dropdown-toggle"  <% if  dept.id.to_s == params[:dept_id]%> style="color: #fff !important" <% end %>>
              <%= dept.title %>
            </a>
          </li>
  <% end %>
</ul>
<div class="tab-content">
  <div id="panel_tab_example1" class="tab-pane active">

    <table class="table table-striped table-bordered table-hover table-full-width" id="sample-table-1">
      <thead>
      <tr>
        <th class="left">名称</th>
        <th class="text-center">操作</th>
      </tr>
      </thead>
      <tbody>
      <% unless @dept.blank? %>
          <% @dept.traverse  do |dept|  %>
              <tr>
                <td class="left"><%= raw '&nbsp;'*3*dept.depth+dept.title %></td>
                <td class="center">
                  <div class="visible-md visible-lg hidden-sm hidden-xs">
                    <%= link_to edit_xmt_staff_dept_application_path(dept), 'class': 'btn btn-xs btn-teal tooltips', 'data-placement': 'top',  'data-original-title': '修改' do %>
                        <i class="fa fa-edit"></i>
                    <% end   %>
                    <%= link_to  xmt_staff_dept_application_path(dept), 'class': 'btn btn-xs btn-bricky tooltips', 'data-placement': 'top', 'data-original-title': '删除', method: :delete, data: { confirm: '确定删除?' } do %>
                        <i class="fa fa-times"></i>
                    <% end   %>
                  </div>
                  <div class="visible-xs visible-sm hidden-md hidden-lg">
                    <div class="btn-group">
                      <a class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                        <i class="clip-cog"></i> <span class="caret"></span>
                      </a>
                      <ul role="menu" class="dropdown-menu pull-right">
                        <li role="presentation">
                          <%= link_to edit_xmt_staff_dept_application_path(dept), 'tabindex': '-1', 'role': 'menuitem' do %>
                              <i class="fa fa-edit"></i> 修改
                          <% end %>
                        </li>
                        <li role="presentation">
                          <%= link_to xmt_staff_dept_application_path(dept), 'tabindex': '-1', 'role': 'menuitem', method: :delete, data: { confirm: 'Are you sure?' } do %>
                              <i class="fa fa-times"></i> 删除
                          <% end %>
                        </li>
                      </ul>
                    </div>
                  </div></td>
              </tr>
          <% end %>
      <% end %>
      </tbody>
      <footer>
        <tr></tr>
      </footer>
    </table>
  </div>
</div>

<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">
      <%= link_to new_xmt_staff_dept_application_path() ,  "class":"btn btn-orange add-row" do %>
          <i class="fa fa-plus"></i>
      <% end %>
    </div>
  </div>

</div>
