<div class="page-header">
  <h1>查看通知公告<small></small></h1>
</div>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <table id="user" class="table table-bordered table-striped" style="clear: both">
      <tbody>
      <tr>
        <td class="column-left">标题：</td>
        <td class="column-right">
          <%= @announcement.title %>
        </td>
      </tr>
      <tr>
        <td class="column-left">内容：</td>
        <td class="column-right">
          <%= @announcement.cont %>
        </td>
      </tr>
      <tr>
        <td class="column-left">所属站点：</td>
        <td class="column-right">
          <%= @announcement.site.title %>
        </td>
      </tr>

      </tbody>
    </table>

  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">

      <a class="btn btn-teal" href="<%= edit_xmt_sms_notification_path(@announcement)%>">
        <i class="fa fa-edit"></i>
      </a>
      <a class="btn btn-primary" href="<%= xmt_sms_notifications_path%>">
        <i class="fa fa-reply"></i>
      </a>
    </div>
  </div>

</div>
