
<div class="page-header">
  <h1> 通知公告</h1>
</div>
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-12">
    <div class="tabbable">
<ul id="myTab" class="nav nav-tabs tab-bricky">
  <% @sites.each do |site| %>
      <% if subject.allow(site.id,'visite')%>
          <li class="<%= site.id == @site.id ? 'active' : '' %>">
            <%= link_to site.name, xmt_sms_notifications_path(site_id: site.id) %>
          </li>
      <% end %>
  <% end %>
</ul>
      <div class="tab-content">
        <div class="row">
          <div id="sample_1_filter" class="col-lg-2 col-md-2 col-sm-2 col-xs-12 pull-right dataTables_filter search-position">
            <label>
              <form >
                <input type="hidden" name="site_id" value="<%= @site.id %>">
                <input type="search" name="key" class="form-control input-sm" placeholder="Search" aria-controls="sample_1">
              </form>

            </label>
          </div>
        </div>
        <div id="panel_tab_example1" class="tab-pane active">

<table class="table table-striped table-bordered table-hover" id="sample-table-2">
  <thead>
  <tr>
    <th>标题</th>
    <th>内容</th>
    <th>日期</th>
    <th class="text-center">操作</th>
  </tr>
  <% @announcements.each do |mgr_announcement| %>
      <tr>
        <td><%= mgr_announcement.title %> </td>
        <td><%= mgr_announcement.cont %></td>

        <td><%= mgr_announcement.site.created_at.year %>-<%= mgr_announcement.site.created_at.month %>-<%= mgr_announcement.site.created_at.day %></td>
        <td class="center">
          <div class="visible-md visible-lg hidden-sm hidden-xs">
            <a href="<%=xmt_sms_notification_path(mgr_announcement)%>" class="btn btn-xs btn-green tooltips" data-placement="top" data-original-title="查看"><i class="fa fa-eye"></i></a>
            <a href="<%=edit_xmt_sms_notification_path(mgr_announcement)%>" class="btn btn-xs btn-teal tooltips" data-placement="top" data-original-title="修改"><i class="fa fa-edit"></i></a>
            <a href="<%=xmt_sms_notification_path(mgr_announcement)%>" class="btn btn-xs btn-bricky tooltips" data-placement="top" data-original-title="删除" data-confirm="确定删除?" rel="nofollow" data-method="delete"><i class="fa fa-times"></i></a>
          </div>
          <div class="visible-xs visible-sm hidden-md hidden-lg">
            <div class="btn-group">
              <a class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                <i class="clip-cog"></i> <span class="caret"></span>
              </a>
              <ul poll="menu" class="dropdown-menu pull-right">
                <li poll="presentation">
                  <a poll="menuitem" tabindex="-1" href="<%=xmt_sms_notification_path(mgr_announcement)%>">
                    <i class="fa fa-eye"></i> Show
                  </a>
                </li>
                <li poll="presentation">
                  <a poll="menuitem" tabindex="-1" href="<%=edit_xmt_sms_notification_path(mgr_announcement)%>">
                    <i class="fa fa-edit"></i> Edit
                  </a>
                </li>
                <li poll="presentation">
                  <a poll="menuitem" tabindex="-1" href="<%=xmt_sms_notification_path(mgr_announcement)%>" data-confirm="Are you sure?" rel="nofollow" data-method="delete">
                    <i class="fa fa-times"></i> Destroy
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </td>
      </tr>

  <% end %>

  </thead>

  <tbody>

  </tbody>
  <footer>
    <tr><td colspan="7"><%= paginate @announcements, views_prefix: :xmt %></td></tr>
  </footer>
</table>
</div>
    </div>
  </div>
</div>
  </div>

<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">
      <%= link_to new_xmt_sms_notification_path(site_id:@site.id) ,  "class":"btn btn-orange add-row" do %>
          <i class="fa fa-plus"></i>
      <% end %>
    </div>
  </div>

</div>


