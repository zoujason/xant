<div class="panel-body">
  <%= form_for(@tip, html: {class: "form-horizontal", onkeydown:"if(event.keyCode==13){return false;}"  }) do |f| %>
      <%= render 'shares/errors', obj: @tip if @tip.errors.any? %>
      <div class="row">
        <div class="col-sm-12">
          <div class="tabbable">
            <ul id="myTab" class="nav nav-tabs tab-bricky">
              <li class="active">
                <a href="#panel_tab2_example1" data-toggle="tab">
                  <i class="clip-home-2"></i>信箱信息
                </a>
              </li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane in active" id="panel_tab2_example1">
                <div class="form-group">
                  <%= f.hidden_field :id %>
                  <%= f.hidden_field :site_id ,value:@site.id %>
                  <%= f.label(:title,"举报人：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:jb_name, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"身份证号：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:jb_cardid, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"级别：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:jb_jibie, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"联系电话：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:jb_tel, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"职务：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:jb_position, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"邮政编码：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:jb_cord, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"举报人单位：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:jb_job, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"联系地址：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:jb_address, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"被举报姓名或单位名称：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:bjb_name, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"政治面貌：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:bjb_patry, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"级别：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:bjb_jibie, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"问题类别：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:bjb_type, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"职务：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:bjb_position, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"工作单位：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:bjb_job, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title,"联系地址：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:bjb_address, class: "form-control",disabled:"disabled") %>
                  </div>
                </div>





                <div class="form-group">
                  <%= f.label(:cont,"举报内容：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%#= f.cktext_area :cont, class: 'form-control'%>
                    <%= f.text_area(:cont, class: "form-control",disabled:"disabled")%>
                  </div>
                </div>

                <div class="form-group">
                  <%= f.label(:reply,"回复内容：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%#= f.cktext_area :cont, class: 'form-control'%>
                    <%= f.text_area(:reply, class: "form-control")%>
                  </div>
                </div>

                <div class="form-group">
                  <%= f.label(:checked,"是否回复：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <div class="checkbox">
                      <label>
                        <%= f.check_box(:checked, { class: 'grey',checked:'checked'}, "true", "false")%>
                      </label>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:replyname,"回复人：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%#= f.cktext_area :cont, class: 'form-control'%>
                    <%= f.text_field(:replyname, class: "form-control",required:"required") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:replytime, "回复日期：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.datetime_field("replytime", min: "2014-01-01 00:00;00") %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4" id="add-input"></div>
          <div class="col-sm-2" id="vive-submit">
            <input type="submit" name="commit" value="确认提交" class="btn btn-blue next-step btn-block" data-disable-with="确认提交">
          </div>
          <div class="col-sm-1">
            <a title="返回" class="btn btn-primary" href="<%= xmt_faq_tips_path(site_id: @site.try(:id))%>">
              <i class="fa fa-reply"></i> </a>
          </div>
        </div>
      </div>
  <% end %>
</div>




