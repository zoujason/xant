<div class="page-header">
  <h1>查看问卷调查<small></small></h1>
</div>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <table id="user" class="table table-bordered table-striped" style="clear: both">
      <tbody>
      <tr>
        <td class="column-left">标题：</td>
        <td class="column-right">
          <%= @poll.title %>
        </td>
      </tr>
      <tr>
        <td class="column-left">描述：</td>
        <td class="column-right">
          <%= @poll.desc %>
        </td>
      </tr>
      <tr>
        <td class="column-left">开始时间：</td>
        <td class="column-right">
          <%= @poll.start_at %>
        </td>
      </tr>
      <tr>
        <td class="column-left">结束时间：</td>
        <td class="column-right">
          <%= @poll.end_at %>
        </td>
      </tr>

      <tr>
        <td class="column-left">次数限制：</td>
        <td class="column-right">
          <%= @poll.interval_hour %>
        </td>
      </tr>
      <tr>
        <td class="column-left">状态：</td>
        <td class="column-right">
          <%= @poll.status %>
        </td>
      </tr>
      <tr>
        <td class="column-left">问题：</td>
        <td class="column-right">
        </td>
      </tr>
      <% @poll.questions.each do |q| %>
          <tr>
            <td class="column-left"></td>
            <td class="column-right"><%= q.title %> <%= q.qty %></td>
          </tr>
          <% q.answers.each do |item| %>
              <tr>
                <td class="column-left"></td>
                <td class="column-right"><%= item.title %> <%= item.qty %></td>
              <tr>
          <% end %>
      <% end %>
      </tbody>
    </table>

  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">

      <a class="btn btn-teal" href="<%= edit_xmt_faq_poll_path(@poll)%>">
        <i class="fa fa-edit"></i>
      </a>
      <a class="btn btn-primary" href="<%= xmt_faq_polls_path%>">
        <i class="fa fa-reply"></i>
      </a>
    </div>
  </div>

</div>
