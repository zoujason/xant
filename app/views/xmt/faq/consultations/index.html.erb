<div class="page-header">
  <h1>咨询留言管理<small></small></h1>
</div>
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-12">
    <div class="tabbable">
      <ul id="myTab" class="nav nav-tabs tab-bricky xmt-tab">
        <% @sites.each do |site| %>
            <% if subject.allow(site.id,'visite')%>
                <li class="<%= site.id == @site.id ? 'active' : 'dropdown' %>">
                  <a href="/xmt/faq/consultations?site_id=<%=site.id %>" class="dropdown-toggle" >
                    <%= site.name %>
                  </a>
                </li>
            <% end %>
        <% end %>
      </ul>

      <div class="tab-content">
        <div id="panel_tab_example1" class="tab-pane active">
          <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 btn-group">
              <%= link_to  '已回复', xmt_faq_consultations_path(site_id: @site.try(:id), checked: 'true'), class: 'btn btn-default' %>
              <%= link_to  '未回复', xmt_faq_consultations_path(site_id: @site.try(:id), checked: 'false'), class: 'btn btn-default' %>
            </div>
            <div id="sample_1_filter" class="col-lg-6 col-md-6 col-sm-6 col-xs-12 pull-right dataTables_filter search-position">
              <label>
                <form action="<%= xmt_faq_consultations_path(site_id:@site.try(:id))%>" method="get">
                  <input type="hidden" name="site_id" value="<%= @site.id %>">
                  <input type="search" name="key" class="form-control input-sm" placeholder="Search" aria-controls="sample_1">
                </form>
              </label>
            </div>
          </div>
          <table class="table table-striped table-bordered table-hover table-full-width" id="sample-table-1">

            <thead>
            <tr>
              <th class="center">日期</th>
              <th class="center">标题</th>
              <th class="center">状态</th>
              <th class="hidden-xs center">回复人</th>
              <th class="hidden-xs center">回复时间</th>
              <th class="text-center">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @consultations.each do |consult|  %>
                <tr>
                  <td class="center"><%= consult.published_at && consult.published_at.strftime('%Y-%m-%d %H:%M:%S').to_s %></td>
                  <td class="center"><%= consult.title %></td>
                  <td class="center"><%= consult.checked=='false' ? '未回复' : '已回复'%></td>
                  <td class="hidden-xs  center"><%= consult.replyname %></td>
                  <td class="hidden-xs  center"><%= consult.replytime && consult.replytime.strftime('%Y-%m-%d %H:%M:%S').to_s %></td>
                  <td class="center">
                    <div class="visible-md visible-lg hidden-sm hidden-xs">

                      <%= link_to edit_xmt_faq_consultation_path(consult,site_id:@site.try(:id)), 'class': 'btn btn-xs btn-teal tooltips', 'data-placement': 'top',  'data-original-title': '修改' do %>
                          <i class="fa fa-edit"></i>
                      <% end   %>
                      <%= link_to  xmt_faq_consultation_path(consult,site_id:@site.try(:id)), 'class': 'btn btn-xs btn-bricky tooltips', 'data-placement': 'top', 'data-original-title': '删除', method: :delete, data: { confirm: '确定删除?' } do %>
                          <i class="fa fa-times"></i>
                      <% end   %>
                    </div>
                    <div class="visible-xs visible-sm hidden-md hidden-lg">
                      <div class="btn-group">
                        <a class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                          <i class="clip-cog"></i> <span class="caret"></span>
                        </a>
                        <ul role="menu" class="dropdown-menu pull-right">

                          <li role="presentation">
                            <%= link_to edit_xmt_faq_consultation_path(consult,site_id:@site.try(:id)), 'tabindex': '-1', 'role': 'menuitem' do %>
                                <i class="fa fa-edit"></i> 修改
                            <% end %>
                          </li>
                          <li role="presentation">
                            <%= link_to xmt_faq_consultation_path(consult,site_id:@site.try(:id)), 'tabindex': '-1', 'role': 'menuitem', method: :delete, data: { confirm: 'Are you sure?' } do %>
                                <i class="fa fa-times"></i> 删除
                            <% end %>
                          </li>
                        </ul>
                      </div>
                    </div></td>
                </tr>
            <% end %>
            </tbody>
            <footer>
              <tr><td colspan="7"><%= paginate @consultations, views_prefix: :xmt %></td></tr>
            </footer>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

</div>
