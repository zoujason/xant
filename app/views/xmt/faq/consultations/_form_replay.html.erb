<div class="panel-body">
  <%= form_for(@consultation, html: {class: "form-horizontal", onkeydown:"if(event.keyCode==13){return false;}"  }) do |f| %>
      <%= render 'shares/errors', obj: @consultation if @consultation.errors.any? %>
      <div class="row">
        <div class="col-sm-12">
          <div class="tabbable">
            <ul id="myTab" class="nav nav-tabs tab-bricky">
              <li class="active">
                <a href="#panel_tab2_example1" data-toggle="tab">
                  <i class="clip-home-2"></i>咨询留言
                </a>
              </li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane in active" id="panel_tab2_example1">
                <div class="form-group">
                  <%= f.label(:name,"姓名：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%#= f.cktext_area :cont, class: 'form-control'%>
                    <%= f.text_field(:name, class: "form-control",readonly:'readonly') %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:tel,"手机号：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%#= f.cktext_area :cont, class: 'form-control'%>
                    <%= f.text_field(:tel, class: "form-control",readonly:'readonly') %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:email,"邮箱：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%#= f.cktext_area :cont, class: 'form-control'%>
                    <%= f.text_field(:email, class: "form-control",readonly:'readonly') %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.hidden_field :id %>
                  <%= f.hidden_field :site_id ,value:@site.id %>
                  <%= f.label(:title,"信箱标题：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:title, class: "form-control",readonly:'readonly') %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:cont,"信箱内容：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%#= f.cktext_area :cont, class: 'form-control'%>
                    <%= f.text_area(:cont, class: "form-control",readonly:'readonly')%>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:ispub,"是否公开：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= @consultation.ispub=='false' ? '不同意' : '同意'%>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:isshow,"是否选登：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.radio_button( "isshow","true",{class:"lqgzf_radio"})%>是
                    <%= f.radio_button("isshow", "false",{class:"lqgzf_radio"})%>否<br>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:reply,"回复内容：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%#= f.cktext_area :cont, class: 'form-control'%>
                    <%= f.text_area(:reply, class: "form-control")%>
                  </div>
                </div>

                <div class="form-group">
                  <%= f.label(:checked,"是否回复：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <div class="checkbox">
                      <label>
                        <%= f.check_box(:checked, { class: 'grey',checked:'checked'}, "true", "false")%>
                      </label>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:replyname,"回复人：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%#= f.cktext_area :cont, class: 'form-control'%>
                    <%= f.text_field(:replyname, class: "form-control",required:"required") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:replytime, "回复日期：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.datetime_field("replytime", min: "2014-01-01 00:00;00") %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4" id="add-input"></div>
          <div class="col-sm-2" id="vive-submit">
            <input type="submit" name="commit" value="确认提交" class="btn btn-blue next-step btn-block" data-disable-with="确认提交">
          </div>
          <div class="col-sm-1">
            <a title="返回" class="btn btn-primary" href="<%= xmt_faq_consultations_path(site_id: @site.try(:id))%>">
              <i class="fa fa-reply"></i> </a>
          </div>
        </div>
      </div>
  <% end %>
</div>





