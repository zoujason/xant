<div class="page-header">
  <h1>查看评论<small></small></h1>
</div>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <table id="user" class="table table-bordered table-striped" style="clear: both">
      <tbody>
      <tr>
        <td class="column-left">标题：</td>
        <td class="column-right">
          <%= @message.title %>
        </td>
      </tr>
      <tr>
        <td class="column-left">内容：</td>
        <td class="column-right">
          <%= @message.cont%>
        </td>
      </tr>
      <tr>
        <td class="column-left">电话：</td>
        <td class="column-right">
          <%= @message.tel %>
        </td>
      </tr>
      <tr>
        <td class="column-left">审核：</td>
        <td class="column-right">
          <%= @message.checked == 'true' ? '已审核' : '未审核'  %>
        </td>
      </tr>

      </tbody>
    </table>

  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">
      <!-- <a class="btn btn-teal" href="<%= edit_xmt_faq_message_path(@message)%>">
        <i class="fa fa-edit"></i>
      </a>-->
      <a class="btn btn-primary" href="<%= xmt_faq_messages_path%>">
        <i class="fa fa-reply"></i>
      </a>
    </div>
  </div>

</div>
