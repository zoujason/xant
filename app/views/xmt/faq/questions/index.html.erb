<div class="page-header">
  <h1>问题管理<small></small></h1>
</div>
<p id="notice"><%= notice %></p>
<table class="table table-striped table-bordered table-hover" id="sample-table-2">
  <thead>
  <tr>
    <th>seq</th>
    <th>title</th>
    <th>poll_id</th>
    <th>qty</th>
    <th>typ</th>
    <th class="text-center">操作</th>
  </tr>
  </thead>
  <tbody>
  <% @questions.each do |mgr_question| %>
      <tr>
        <td><%= mgr_question.seq %></td>
        <td><%= mgr_question.title %></td>
        <td><%= mgr_question.poll.title %></td>
        <td><%= mgr_question.qty %></td>
        <td><%= mgr_question.typ %></td>
        <td class="center">
          <div class="visible-md visible-lg hidden-sm hidden-xs">
            <a href="<%=xmt_faq_question_path(mgr_question)%>" class="btn btn-xs btn-green tooltips" data-placement="top" data-original-title="Show"><i class="fa fa-eye"></i></a>
            <a href="<%=edit_xmt_faq_question_path(mgr_question)%>" class="btn btn-xs btn-teal tooltips" data-placement="top" data-original-title="Edit"><i class="fa fa-edit"></i></a>
            <a href="<%=xmt_faq_question_path(mgr_question)%>" class="btn btn-xs btn-bricky tooltips" data-placement="top" data-original-title="Destroy" data-confirm="Are you sure?" rel="nofollow" data-method="delete"><i class="fa fa-times"></i></a>
          </div>
          <div class="visible-xs visible-sm hidden-md hidden-lg">
            <div class="btn-group">
              <a class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                <i class="clip-cog"></i> <span class="caret"></span>
              </a>
              <ul question="menu" class="dropdown-menu pull-right">
                <li question="presentation">
                  <a question="menuitem" tabindex="-1" href="<%=xmt_faq_question_path(mgr_question)%>">
                    <i class="fa fa-eye"></i> Show
                  </a>
                </li>
                <li question="presentation">
                  <a question="menuitem" tabindex="-1" href="<%=edit_xmt_faq_question_path(mgr_question)%>">
                    <i class="fa fa-edit"></i> Edit
                  </a>
                </li>
                <li question="presentation">
                  <a question="menuitem" tabindex="-1" href="<%=xmt_faq_question_path(mgr_question)%>" data-confirm="Are you sure?" rel="nofollow" data-method="delete">
                    <i class="fa fa-times"></i> Destroy
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">
      <%= link_to new_xmt_faq_question_path ,  "class":"btn btn-orange add-row" do %>
          <i class="fa fa-plus"></i>
      <% end %>
    </div>
  </div>

</div>

