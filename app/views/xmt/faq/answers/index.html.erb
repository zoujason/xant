<div class="page-header">
  <h1>问卷管理<small></small></h1>
</div>
<p id="notice"><%= notice %></p>
<table class="table table-striped table-bordered table-hover" id="sample-table-2">
  <thead>
  <tr>
    <th>title</th>
    <th>qty</th>
    <th>pic</th>
    <th>seq</th>

    <th class="text-center">操作</th>
  </tr>
  </thead>
  <tbody>
  <% @answers.each do |mgr_answer| %>
      <tr>
        <td><%= mgr_answer.title %></td>
        <td><%= mgr_answer.qty %></td>
        <td><%= mgr_answer.pic %></td>
        <td><%= mgr_answer.seq %></td>
        <td class="center">
          <div class="visible-md visible-lg hidden-sm hidden-xs">
            <a href="<%=xmt_faq_answer_path(mgr_answer)%>" class="btn btn-xs btn-green tooltips" data-placement="top" data-original-title="查看"><i class="fa fa-eye"></i></a>
            <a href="<%=edit_xmt_faq_answer_path(mgr_answer)%>" class="btn btn-xs btn-teal tooltips" data-placement="top" data-original-title="修改"><i class="fa fa-edit"></i></a>
            <a href="<%=xmt_faq_answer_path(mgr_answer)%>" class="btn btn-xs btn-bricky tooltips" data-placement="top" data-original-title="删除" data-confirm="Are you sure?" rel="nofollow" data-method="delete"><i class="fa fa-times"></i></a>
          </div>
          <div class="visible-xs visible-sm hidden-md hidden-lg">
            <div class="btn-group">
              <a class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                <i class="clip-cog"></i> <span class="caret"></span>
              </a>
              <ul answer="menu" class="dropdown-menu pull-right">
                <li answer="presentation">
                  <a answer="menuitem" tabindex="-1" href="<%=xmt_faq_answer_path(mgr_answer)%>">
                    <i class="fa fa-eye"></i> 查看
                  </a>
                </li>
                <li answer="presentation">
                  <a answer="menuitem" tabindex="-1" href="<%=edit_xmt_faq_answer_path(mgr_answer)%>">
                    <i class="fa fa-edit"></i> 修改
                  </a>
                </li>
                <li answer="presentation">
                  <a answer="menuitem" tabindex="-1" href="<%=xmt_faq_answer_path(mgr_answer)%>" data-confirm="Are you sure?" rel="nofollow" data-method="delete">
                    <i class="fa fa-times"></i> 删除
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
  <footer>
    <tr><td colspan="7"><%= paginate @answers, views_prefix: :xmt %></td></tr>
  </footer>
</table>

<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">
      <%= link_to new_xmt_faq_answer_path ,  "class":"btn btn-orange add-row" do %>
          <i class="fa fa-plus"></i>
      <% end %>
    </div>
  </div>

</div>

