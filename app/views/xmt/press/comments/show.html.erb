<div class="page-header">
  <h1>查看评论<small></small></h1>
</div>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <table id="user" class="table table-bordered table-striped" style="clear: both">
      <tbody>
      <tr>
        <td class="column-left">评论内容：</td>
        <td class="column-right">
          <%= @comment.cont%>
        </td>
      </tr>
      <tr>
        <td class="column-left">所属文章：</td>
        <td class="column-right">
          <%= @comment.page.title %>
        </td>
      </tr>
      <tr>
        <td class="column-left">回复查看：</td>
        <td class="column-right">
          <% @comment.each_reply(nil) do |c| %>
            <li><%= c.cont%>&nbsp;&nbsp;[<a href="/xmt/press/comments/reply?id=<%= @comment.id%>&parent_id=<%= c.id%>">点击回复</a>]&nbsp;&nbsp;[<a href="/xmt/press/comments/del_reply?id=<%= c.id%>&comment_id=<%= @comment.id%>">删除</a>]</li>
          <% end %>
        </td>
      </tr>
      <tr>
        <td class="column-left">回复：</td>
        <td class="column-right">
          <a href="/xmt/press/comments/reply?id=<%= @comment.id %>">点击回复</a>
        </td>
      </tr>
      </tbody>
    </table>

  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">
     <!-- <a class="btn btn-teal" href="<%= edit_xmt_press_comment_path(@comment)%>">
        <i class="fa fa-edit"></i>
      </a>-->
      <a class="btn btn-primary" href="<%= xmt_press_comments_path%>">
        <i class="fa fa-reply"></i>
      </a>
    </div>
  </div>

</div>
