
<div class="page-header">
  <h1> 评论管理<small></small></h1>

</div>
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-12">
    <div class="tabbable">

      <div class="tab-content">
        <br/>
        <div class="row">
          <div id="sample_1_filter" class="col-lg-2 col-md-2 col-sm-2 col-xs-12 pull-right dataTables_filter search-position">
            <label>
              <form  >
                <input type="hidden" name="site_id" value="<%= @site.id %>">
                <input type="search" name="key" class="form-control input-sm" placeholder="Search" aria-controls="sample_1">
              </form>

            </label>
          </div>
        </div>
        <br/>
          <div id="panel_tab_example1" class="tab-pane active">

            <div>
              </div>
          <table class="table table-striped table-bordered table-hover table-full-width" id="sample-table-1">
            <thead>
            <tr>
              <th class="hidden-xs center">内容</th>
              <th class="hidden-xs center">所属文章</th>
              <th class="hidden-xs center">审核</th>
              <th class="hidden-xs center">操作</th>

            </tr>
            </thead>
            <tbody>
            <% @comments.each do |comment| %>
                <tr>
                  <td class="hidden-xs  center">
                    <%= comment.cont%>
                  </td>
                  <td class="hidden-xs  center"><%= comment.page.title %></td>
                  <td class="hidden-xs  center"><%= comment.checked == true ? '已审核' : '未审核' %></td>

                  <td class="center">
                    <div class="visible-md visible-lg hidden-sm hidden-xs">
                      <%= link_to xmt_press_comment_path(comment), 'class': 'btn btn-xs btn-green tooltips', 'data-placement': 'top',  'data-original-title': '查看' do %>
                          <i class="fa fa-eye"></i>
                      <% end %>
                      <%= link_to  xmt_press_comment_path(comment), 'class': 'btn btn-xs btn-bricky tooltips', 'data-placement': 'top', 'data-original-title': '删除', method: :delete, data: { confirm: '确认删除?' } do %>
                          <i class="fa fa-times"></i>
                      <% end %>
                    </div>
                    <div class="visible-xs visible-sm hidden-md hidden-lg">
                      <div class="btn-group">
                        <a class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                          <i class="clip-cog"></i> <span class="caret"></span>
                        </a>
                        <ul role="menu" class="dropdown-menu pull-right">

                          <li role="presentation">
                            <%= link_to xmt_press_comment_path(comment), 'tabindex': '-1', 'role': 'menuitem' do %>
                                <i class="fa fa-share"></i> 查看
                            <% end %>

                          </li>

                          <li role="presentation">

                            <%= link_to edit_xmt_press_comment_path(comment), 'tabindex': '-1', 'role': 'menuitem' do %>
                                <i class="fa fa-edit"></i> 修改
                            <% end %>

                          </li>
                          <li role="presentation">

                            <%= link_to xmt_press_comment_path(comment), 'tabindex': '-1', 'role': 'menuitem', method: :delete, data: { confirm: 'Are you sure?' } do %>
                                <i class="fa fa-times"></i> 删除
                            <% end %>

                          </li>

                        </ul>
                      </div>
                    </div></td>
                </tr>
            <% end %>

            </tbody>
            <footer>
              <tr><td colspan="5"><%= paginate @comments, views_prefix: :xmt %></td></tr>
            </footer>
          </table>
        </div>
      </div>

    </div>

  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">
      <%= link_to  new_xmt_press_comment_path(site_id:@site.id) ,  "class":"btn btn-orange add-row" do %>
          <i class="fa fa-plus"></i>
      <% end %>
    </div>
  </div>
</div>

</div>
