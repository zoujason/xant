<div class="page-header">
  <h1>单页内容管理<small></small></h1>
</div>
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-12">
    <div class="tabbable">
      <ul id="myTab" class="nav nav-tabs tab-bricky">
        <% @sites.each do |site| %>
            <li class="<%= site.id == @site.id ? 'active' : '' %>">
              <%= link_to site.name, xmt_press_single_pages_path(site_id: site.id) %>
            </li>
        <% end %>
      </ul>
      <div class="tab-content">
        <div id="panel_tab_example1" class="tab-pane active">
          <table class="table table-striped table-bordered table-hover table-full-width" id="sample-table-1">
            <thead>
            <tr>
              <th>名称</th>
              <th>标识</th>
              <th class="hidden-xs">模板</th>
              <th class="text-center">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @singlepages.each do |singlepage| %>
                <tr>
                  <td ><%= singlepage.title%></td>
                  <td ><%= singlepage.sign%></td>
                  <td class="hidden-xs"><%= singlepage.tpl%></td>
                  <td class="center">
                    <div class="visible-md visible-lg hidden-sm hidden-xs">

                      <%= link_to xmt_press_single_page_path(singlepage), 'class': 'btn btn-xs btn-green tooltips', 'data-placement': 'top',  'data-original-title': '查看' do %>
                          <i class="fa fa-eye"></i>
                      <% end    %>
                      <%= link_to edit_xmt_press_single_page_path(singlepage), 'class': 'btn btn-xs btn-teal tooltips', 'data-placement': 'top',  'data-original-title': '修改' do %>
                          <i class="fa fa-edit"></i>
                      <% end  %>
                      <%= link_to xmt_press_single_page_path(singlepage), 'class': 'btn btn-xs btn-bricky tooltips', 'data-placement': 'top',  'data-original-title': '删除' , method: :delete, data: { confirm: '确定删除?' } do %>
                          <i class="fa fa-times"></i>
                      <% end  %>
                    </div>
                    <div class="visible-xs visible-sm hidden-md hidden-lg">
                      <div class="btn-group">
                        <a class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                          <i class="clip-cog"></i> <span class="caret"></span>
                        </a>
                        <ul role="menu" class="dropdown-menu pull-right">

                          <li role="presentation">
                            <%= link_to xmt_press_single_page_path(singlepage), 'tabindex': '-1', 'role': 'menuitem' do %>
                                <i class="fa fa-eye"></i> Show
                            <% end %>
                          </li>
                          <li role="presentation">
                            <%= link_to edit_xmt_press_single_page_path(singlepage), 'tabindex': '-1', 'role': 'menuitem' do %>
                                <i class="fa fa-edit"></i> Edit
                            <% end %>
                          </li>
                          <li role="presentation">
                            <%= link_to xmt_press_single_page_path(singlepage), 'tabindex': '-1', 'role': 'menuitem', method: :delete, data: { confirm: 'Are you sure?' } do %>
                                <i class="fa fa-times"></i> Remove
                            <% end %>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </td>
                </tr>
            <% end %>
            </tbody>
            <footer>
              <tr><td colspan="7"><%= paginate @singlepages, views_prefix: :xmt %></td></tr>
            </footer>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">
      <%= link_to  new_xmt_press_single_page_path(site_id: @site.id) ,  "class":"btn btn-orange add-row" do %>
          <i class="fa fa-plus"></i>
      <% end if subject.allow(@site.id, :add)  %>
    </div>
  </div>
</div>

