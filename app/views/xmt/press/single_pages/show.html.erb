<div class="page-header">
  <h1>查看单页内容<small></small></h1>
</div>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <table id="user" class="table table-bordered table-striped" style="clear: both">
      <tbody>
      <tr>
        <td class="column-left"><strong>模板名称：</strong></td>
        <td class="column-right">
          <%= @singlepage.title %>
        </td>
      </tr>
      <tr>
        <td class="column-left"><strong>所属站点：</strong></td>
        <td class="column-right">
          <%= @sites.find(@singlepage.parent_id).name%>
        </td>
      </tr>
      <tr>
        <td class="column-left"><strong>SEO标题：</strong></td>
        <td class="column-right">
          <%= @singlepage.seo_title %>
        </td>
      </tr>
      <tr>
        <td class="column-left"><strong>SEO关键字：</strong></td>
        <td class="column-right">
          <%= @singlepage.seo_keywords %>
        </td>
      </tr>
      <tr>
        <td class="column-left"><strong>SEO描述：</strong></td>
        <td class="column-right">
          <%= @singlepage.seo_description %>
        </td>
      </tr>
      <tr>
        <td class="column-left"><strong>模板：</strong></td>
        <td class="column-right">
          <%= @singlepage.tpl %>
        </td>
      </tr>
      <tr>
        <td class="column-left"><strong>外部链接：</strong></td>
        <td class="column-right">
          <%= @singlepage.linkpage %>
        </td>
      </tr>
      </tbody>
    </table>

  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">

      <a class="btn btn-teal" href="<%= edit_xmt_press_single_page_path(@singlepage)%>">
        <i class="fa fa-edit"></i>
      </a>
      <a class="btn btn-primary" href="<%= xmt_press_single_pages_path%>">
        <i class="fa fa-reply"></i>
      </a>
    </div>
  </div>

</div>
