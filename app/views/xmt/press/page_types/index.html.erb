<div class="page-header">
  <h1>表单域管理<small></small></h1>
</div>
<p id="notice"><%= notice %></p>
<table class="table table-striped table-bordered table-hover" id="sample-table-2">
  <thead>
  <tr>
    <th>名称</th>
    <th class="text-center">操作</th>
  </tr>
  </thead>
  <tbody>
  <% @page_types.each do |page_type| %>
      <tr>
        <td><%= page_type.title %></td>
        <td class="center">
          <div class="visible-md visible-lg hidden-sm hidden-xs">
            <%= link_to(edit_xmt_press_page_type_path(page_type), 'class': "btn btn-xs btn-green tooltips", 'data-placement': "top", 'data-original-title': "修改") do %>
                修改
            <%end %>
            <%= link_to(xmt_press_page_type_path(page_type), 'class': "btn btn-xs btn-bricky tooltips", 'data-placement': "top", 'data-original-title': "删除",'data-confirm':"确定删除",'rel':"nofollow",'data-method':"delete") do %>
                删除
            <%end %>
          </div>
          <div class="visible-xs visible-sm hidden-md hidden-lg">
            <div class="btn-group">
              <a class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                <i class="clip-cog"></i> <span class="caret"></span>
              </a>
              <ul role="menu" class="dropdown-menu pull-right">
                <li role="presentation">
                  <a role="menuitem" tabindex="-1" href="<%= edit_xmt_press_page_type_path(page_type) %>">
                    <i class="fa fa-edit"></i> Edit
                  </a>
                </li>
                <li role="presentation">
                  <a role="menuitem" tabindex="-1" href="<%= xmt_press_page_type_path(page_type) %>" data-confirm="Are you sure?" rel="nofollow" data-method="delete">
                    <i class="fa fa-times"></i> Destroy
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>

</table>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">
      <%= link_to new_xmt_press_page_type_path, "class": "btn btn-orange add-row" do   %>
          <i class="fa fa-plus"></i>
      <% end  if subject.allow(params[:m_id], :add) %>
    </div>
  </div>

</div>

