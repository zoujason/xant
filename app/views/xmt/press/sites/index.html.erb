<div class="page-header">
  <h1>站点管理<small></small></h1>
</div>
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-12">
      <div class="panel-body">
        <div class="row">
          <div id="sample_1_filter" class="col-lg-2 col-md-2 col-sm-2 col-xs-12 pull-right dataTables_filter search-position">
            <label>
              <form >
                <input type="search" name="key" class="form-control input-sm" placeholder="Search" aria-controls="sample_1">
              </form>

            </label>
          </div>
        </div>
        <table class="table table-striped table-bordered table-hover table-full-width" id="sample-table-1">
          <thead>
          <tr>
            <th>站点名称</th>
            <th class="hidden-xs">主机</th>
            <th class="hidden-xs">Slug</th>
            <th class="hidden-xs">模板</th>
            <th class="hidden-xs">布局</th>
            <th class="text-center">操作</th>
          </tr>
          </thead>
          <tbody>
          <% @sites.each do |site| %>
              <% if subject.allow(site.id,'visite')%>
              <tr>
                <td ><%= site.subtitle%></td>
                <td class="hidden-xs"><%= site.host%></td>
                <td class="hidden-xs"><%= site.slug%></td>
                <td class="hidden-xs"><%= site.tpl%></td>
                <td class="hidden-xs"><%= site.layout%></td>
                <td class="center">
                  <div class="visible-md visible-lg hidden-sm hidden-xs">
                    <%= link_to xmt_press_site_path(site), 'class': 'btn btn-xs btn-green tooltips', 'data-placement': 'top',  'data-original-title': '查看' do  %>
                        <i class="fa fa-eye"></i>
                    <% end  %>
                    <%= link_to edit_xmt_press_site_path(site), 'class': 'btn btn-xs btn-teal tooltips', 'data-placement': 'top',  'data-original-title': '修改' do %>
                        <i class="fa fa-edit"></i>
                    <% end   %>
                    <%= link_to xmt_press_site_path(site), 'class': 'btn btn-xs btn-bricky tooltips', 'data-placement': 'top',  'data-original-title': '删除' , method: :delete, data: { confirm: '确定删除?' } do %>
                        <i class="fa fa-times"></i>
                    <% end  %>
                  </div>
                  <div class="visible-xs visible-sm hidden-md hidden-lg">
                    <div class="btn-group">
                      <a class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                        <i class="clip-cog"></i> <span class="caret"></span>
                      </a>
                      <ul role="menu" class="dropdown-menu pull-right">
                        <li role="presentation">
                          <%= link_to xmt_press_site_path(site), 'tabindex': '-1', 'role': 'menuitem' do %>
                              <i class="fa fa-eye"></i> 查看
                          <% end %>
                        </li>
                        <li role="presentation">
                          <%= link_to edit_xmt_press_site_path(site), 'tabindex': '-1', 'role': 'menuitem' do %>
                              <i class="fa fa-edit"></i> 编辑
                          <% end %>
                        </li>
                        <li role="presentation">
                          <%= link_to xmt_press_site_path(site), 'tabindex': '-1', 'role': 'menuitem', method: :delete, data: { confirm: '确定删除站点?' } do %>
                              <i class="fa fa-times"></i> 删除
                          <% end  %>
                        </li>
                      </ul>
                    </div>
                  </div>
                </td>
              </tr>
              <% end %>
          <% end %>
          </tbody>
          <footer>
            <tr><td colspan="6"><%= paginate @sites, views_prefix: :xmt %></td></tr>
          </footer>
        </table>
      </div>
  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">
      <%= link_to new_xmt_press_site_path ,  "class":"btn btn-orange add-row" do %>
          <i class="fa fa-plus"></i>
      <% end  if subject.allow(params[:m_id], :add) %>
    </div>
  </div>
</div>

