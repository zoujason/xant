<div class="panel-body">
  <%= form_for(site, html: {class: "form-horizontal" , onkeydown:"if(event.keyCode==13){return false;}" }) do |f| %>
      <%= render 'shares/errors', obj: site if site.errors.any? %>
      <div class="row">
        <div class="col-sm-12">
          <div class="tabbable">
            <ul id="myTab" class="nav nav-tabs tab-bricky">
              <li class="active">
                <a href="#panel_tab2_example1" data-toggle="tab">
                  <i class="clip-home-2"></i>基本信息
                </a>
              </li>
              <li>
                <a href="#panel_tab2_example2" data-toggle="tab">
                  高级选项
                </a>
              </li>
              <li>
                <a href="#panel_tab2_example4" data-toggle="tab">
                  关联自定义表单属性
                </a>
              </li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane in active" id="panel_tab2_example1">
                <div class="form-group">
                  <%= f.label(:subtitle, "网站名称：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:subtitle, class: "form-control",required:"required") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:host,"网站域名：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:host, class: "form-control") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:title, "首页标题：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:title, class: "form-control",required:"required") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:slug,"网站SLUG：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:slug, class: "form-control",required:"required") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:skin,"网站Skin：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:skin, class: "form-control",required:"required") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:layout, "网站布局：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:layout, class: "form-control",required:"required") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:tpl, "首页模板：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:tpl, class: "form-control",required:"required") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:logo,"网站LOGO：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.file_field(:logo, class: "file",id:"input-simple") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:icon,"网站ICON：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:icon, class: "form-control") %>
                  </div>
                </div>
              </div>
              <div class="tab-pane" id="panel_tab2_example2">
                <div class="form-group">
                  <%= f.label(:seo_title,"移动网站：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <div class="checkbox">
                      <label>
                        <%= f.check_box(:mobile, {}, "true", "false")%>
                      </label>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:seo_title,"SEO标题：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:seo_title, class: "form-control") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:seo_keywords,"SEO关键字：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:seo_keywords, class: "form-control") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:seo_description, "SEO描述：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_area(:seo_description, class: "form-control")%>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:copyright, "版权信息：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_area(:copyright, class: "form-control")%>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:party_office, "党政机关：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.url_field(:party_office, class: "form-control",placeholder:'请填写党政机关链接地址')%>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:find_errors, "政府找错：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:find_errors, class: "form-control",placeholder:'政府找错ID')%>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:hotline,"联系电话：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:hotline, class: "form-control") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:icp,"网站备案号：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:icp, class: "form-control") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:netsafe_icp,"网安备案号：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:netsafe_icp, class: "form-control") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:sponsor,"主办方：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:sponsor, class: "form-control") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:undertaker,"承办方：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:undertaker, class: "form-control") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:email,"网站邮箱：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:email, class: "form-control") %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label(:identity,"网站标识码：",class: "col-sm-2 control-label")%>
                  <div class="col-sm-9">
                    <%= f.text_field(:identity, class: "form-control") %>
                  </div>
                </div>
              </div>
              <div class="tab-pane" id="panel_tab2_example4">
                <div class="form-group">
                  <%= f.label(:rdf_type_id, "关联自定义表单属性：", class: "col-sm-2 control-label")%>
                  <div class="col-sm-2">
                    <%= f.collection_select :page_type_id, Xmt::Press::PageType.all, :id, :title, {include_blank: '请选择'}, class: "form-control"%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4"></div>
          <div class="col-sm-2"><input type="submit" name="commit" value="确认提交" class="btn btn-blue next-step btn-block" data-disable-with="确认提交"></div>
          <div class="col-sm-1">  <a class="btn btn-primary" href="<%= xmt_press_sites_path %>">
            <i class="fa fa-reply"></i> </a></div>
        </div>
      </div>
  <% end %>
</div>
      <!-- start: PAGE CONTENT -->



