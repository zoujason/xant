<div class="page-header">
  <h1>查看站点<small></small></h1>
</div>
<p id="notice"><%= notice %></p>
<div class="panel panel-body panel-default">
    <div class="form-group marbot0">
      <label class="col-xs-4 col-sm-3 control-label"><span class="text-danger"></span><strong>站点名称：</strong></label>
      <div class="col-sm-9 col-xs-8">
        <p class="form-control-static"><%= @site.title %></p>
      </div>
    </div>
    <div class="form-group marbot0">
      <label class="col-xs-12 col-sm-3 col-md-2 control-label"><span class="text-danger"></span><strong>站点Host：</strong></label>
      <div class="col-sm-9 col-xs-12">
        <p class="form-control-static"><%= @site.host %></p>
      </div>
    </div>
    <div class="form-group marbot0">
      <label class="col-xs-12 col-sm-3 col-md-2 control-label"><span class="text-danger"></span><strong>站点Slug：</strong></label>
      <div class="col-sm-9 col-xs-12">
        <p class="form-control-static"><%= @site.slug %></p>
      </div>
    </div>
    <div class="form-group marbot0">
      <label class="col-xs-12 col-sm-3 col-md-2 control-label"><span class="text-danger"></span><strong>站点模板:</strong>
      </label>
      <div class="col-sm-9 col-xs-12">
        <p class="form-control-static"><%= @site.tpl %></p>
      </div>
    </div>
    <div class="form-group marbot0">
      <label class="col-xs-12 col-sm-3 col-md-2 control-label"><span class="text-danger"></span><strong>站点视图:</strong></label>
      <div class="col-sm-9 col-xs-12">
        <p class="form-control-static">
          <%= @site.layout %>
        </p>
      </div>
    </div>
    <div class="form-group marbot0">
      <label class="col-xs-12 col-sm-3 col-md-2 control-label"><span class="text-danger"></span><strong>站点Logo:</strong></label>
      <div class="col-sm-9 col-xs-12">
        <p class="form-control-static">
          <%= @site.logo %>
        </p>
      </div>
    </div>
    <div class="form-group marbot0">
      <label class="col-xs-12 col-sm-3 col-md-2 control-label"><span class="text-danger"></span><strong>站点Icon:</strong></label>
      <div class="col-sm-9 col-xs-12">
        <p class="form-control-static">
          <%= @site.icon %>
        </p>
      </div>
    </div>
    <div class="form-group marbot0">
      <label class="col-xs-12 col-sm-3 col-md-2 control-label"><span class="text-danger"></span><strong>站点Skin:</strong></label>
      <div class="col-sm-9 col-xs-12">
        <p class="form-control-static">
          <%= @site.skin %>
        </p>
      </div>
    </div>
</div>

<div class="col-lg-12 space20">
  <%= link_to  edit_xmt_press_site_path(@site), class: "btn btn-teal" do %>
      <i class="fa fa-edit"></i>
  <% end %>
  <%= link_to  xmt_press_sites_path, class: "btn btn-primary" do %>
      <i class="fa fa-reply"></i>
  <% end %>
</div>




