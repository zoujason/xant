<%= form_tag('/xmt/sessions' , "class":"form-login") do %>
    <div class="main-login col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
      <div class="logo">
        Xmt<i class="fa fa-fire"></i>Press
      </div>
      <!-- start: LOGIN BOX -->
      <div class="box-login">
        <h3>登录到您的帐户</h3>
        <p>
          请输入您的姓名和密码登录
        </p>
        <div class="form-login">
          <div class="errorHandler alert alert-danger no-display">
            <i class="fa fa-remove-sign"> 您有一些表单错误, 请检查下面。</i>
          </div>
          <fieldset>
            <div class="form-group">
                <span class="input-icon">
                  <%= text_field_tag 'username' , nil ,  placeholder: '用户名' , class: 'form-control'%>
                  <i class="fa fa-user"></i>
                </span>
            </div>
            <div class="form-group">
                <span class="input-icon">
                  <%= password_field_tag 'password'  , nil , placeholder: '密码' , class:'form-control password'%>
                  <i class="fa fa-lock"></i>
                </span>
            </div>
            <div class="form-group">
                <label>
                  <%= rucaptcha_input_tag(class: 'form-control', placeholder: '输入验证码') %>
                  <%= rucaptcha_image_tag(alt: 'Captcha') %>

                </label>
            </div>
            <div class="form-actions">
              <label for="remember">
                <%= check_box_tag 'remember' , nil %>
                记住用户名密码
              </label>
              <%= submit_tag '登录' , class: "btn btn-bricky pull-right" , id:"btn-icon" %>
            </div>
          </fieldset>
        </div>
      </div>
      <!-- end: LOGIN BOX -->
      <!-- end: REGISTER BOX -->
      <!-- start: COPYRIGHT -->
      <div class="copyright">
        <script>
          document.write(new Date().getFullYear())
        </script> 小蚂蚁科技
      </div>
      <!-- end: COPYRIGHT -->
    </div>
<% end %>








