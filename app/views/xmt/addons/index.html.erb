<div class="page-header">
  <h1>扩展模块管理
    <small></small>
  </h1>
</div>
<p id="notice"><%= notice %></p>

<table class="table table-striped table-bordered table-hover" id="sample-table-2">
  <thead>
  <tr>
    <th>名称</th>
    <th>标识</th>
    <th>路径</th>
    <th class="text-center">操作</th>
  </tr>
  </thead>
  <tbody>
  <% @apps.each do |app| %>
      <tr>
        <td><%= app.name %></td>
        <td><%= app.sign %></td>
        <td><%= app.path %></td>
        <td class="center">
          <div class="visible-md visible-lg hidden-sm hidden-xs">
            <% if app.isinstall == '0' %>
                <a href="<%= edit_xmt_mgr_addon_path(id: app.name) %>" class="btn btn-xs btn-green tooltips btn-wrap" data-placement="top" data-original-title="Install"><i class="fa fa-gears"></i></a>
            <% else %>
                <a href="<%= xmt_mgr_addon_path(id: app.name) %>" class="btn btn-xs btn-bricky tooltips" data-placement="top" data-original-title="删除" data-confirm="确定删除?" rel="nofollow" data-method="delete"><i class="fa fa-trash-o"></i></a>
            <% end %>
          </div>
          <div class="visible-xs visible-sm hidden-md hidden-lg">
            <div class="btn-group">
              <a class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                <i class="fa fa-gears"></i> <span class="caret"></span>
              </a>
              <ul role="menu" class="dropdown-menu pull-right">
                <% if app.isinstall == '0' %>
                    <li role="presentation">
                      <a role="menuitem" tabindex="-1" href="<%= edit_xmt_mgr_addon_path(id: app.name) %>">
                        <i class="fa fa-gears"></i>
                      </a>
                    </li>
                <% else %>
                    <li role="presentation">
                      <a role="menuitem" tabindex="-1" href="<%= xmt_mgr_addon_path(id: app.name) %>" data-confirm="Are you sure?" rel="nofollow" data-method="delete">
                        <i class="fa fa-trash-o"></i>
                      </a>
                    </li>
                <% end %>

              </ul>
            </div>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>

</table>


<div class="panel-body">
  <div class="row">
    <div class="col-md-12 space20">
      <%= link_to new_xmt_mgr_addon_path ,  "class":"btn btn-orange add-row" do %>
          <i class="fa fa-plus"></i>
      <% end %>
    </div>
  </div>

</div>

