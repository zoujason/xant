<%= form_for([:xmt, @addon]) do |f| %>
    <% if @addon.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@addon.errors.count, "error") %> 你的数据有误:</h2>

          <ul>
            <% @addon.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="col-sm-12">
      <!-- start: TEXT FIELDS PANEL -->
      <div class="panel-body">
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-4">
            名称：<span class="symbol required"></span>
          </label>
          <div class="col-sm-9">
            <%= f.text_field(:name, class: "form-control", placeholder: "name", required: "required") %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-4">
            标识：<span class="symbol required"></span>
          </label>
          <div class="col-sm-9">
            <%= f.text_field(:sign, class: "form-control", placeholder: "sign", required: "required") %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-4">
            路径：<span class="symbol required"></span>
          </label>
          <div class="col-sm-9">
            <%= f.text_field(:path, class: "form-control", placeholder: "path", required: "required") %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-4">
            版本：<span class="symbol required"></span>
          </label>
          <div class="col-sm-9">
            <%= f.text_field(:version, class: "form-control", placeholder: "version", required: "required") %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="form-field-4">
            日期：<span class="symbol required"></span>
          </label>
          <div class="col-sm-9">
            <%= f.text_field(:date, class: "form-control", placeholder: "date", required: "required") %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4"></div>
          <div class="col-sm-2">
            <input type="submit" name="commit" value="确认提交" class="btn btn-blue next-step btn-block" data-disable-with="确认提交">
          </div>
          <div class="col-sm-1"><a class="btn btn-primary" href="<%= xmt_mgr_addons_url %>">
            <i class="fa fa-reply"></i> </a></div>
        </div>
      </div>
    </div>

<% end %>
